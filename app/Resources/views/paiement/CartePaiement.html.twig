{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/cartePaiement.css') }}">

{% endblock %}

{% block body %}
                    {{ form_start(form) }}
                     <div class="row CB">
                        <div class="col-3">
                            <input id="carte_paiement_card_type_0" name="carte_paiement[card_type]" required="required" class="form-check-input" value="CB_VISA_MASTERCARD" type="radio">
                            <img src="{{ asset('images/paiement/icn-visa.png') }}" srcset="{{ asset('images/paiement/icn-visa@2x.png 2x,images/paiement/icn-visa@3x.png 3x') }}" id ="img" class="Icn-Visa">
                        </div>
                        <div class="col-3">
                            <input id="carte_paiement_card_type_1" name="carte_paiement[card_type]" required="required" class="form-check-input" value="1" type="radio">
                            <img src="{{ asset('images/paiement/icn-maestro.png') }}" srcset="{{ asset('images/paiement/icn-maestro.png,images/paiement/icn-maestro@2x.png 2x,images/paiement/icn-maestro@3x.png 3x') }}" id ="img" class="Icn-Maestro">
                        </div>
                        <div class="col-3">
                            <input id="carte_paiement_card_type_2" name="carte_paiement[card_type]" required="required" class="form-check-input" value="CB_VISA_MASTERCARD" type="radio">
                            <img src="{{ asset('images/paiement/icn-mastercard.png') }}" srcset="{{ asset('images/paiement/icn-maestro.png,images/paiement/icn-mastercard@2x.png 2x,images/paiement/icn-mastercard@3x.png 3x') }}" id ="img" class="Icn-Mastercard">
                        </div>
                        <div class="col-3">
                            <input id="carte_paiement_card_type_3" name="carte_paiement[card_type]" required="required" class="form-check-input" value="CB_VISA_MASTERCARD" type="radio">
                            <img src="{{ asset('images/paiement/icn-cb.png') }}" srcset="{{ asset('images/paiement/icn-cb@2x.png 2x,images/paiement/icn-cb@3x.png 3x') }}" id ="img" class="Icn-CB">
                        </div>
                     </div>
                    <div class="row">
                        <p>Montant de l'assurance :</p><p>{{ reservation.caution }} €</p>
                    </div>
                    <div class="row">
                        <p>Montant du dépôt de garantie :</p><p>{{ reservation.assurance }} €</p>
                    </div>
                    <div class="row">
                        <p>Montant total :</p><p>{{ reservation.assurance + reservation.caution }} €</p>
                    </div>
                    {{ form_row(form.cardNumber, {'attr': {'placeholder': 'Numéro de la carte'} }) }}
                    <div class="row">
                        <div class="col-6">
                        {{ form_row(form.cardExpirationDate, {'attr': {'placeholder': 'MMYY'} }) }}
                        </div>
                        <div class="col-6">
                        {{ form_row(form.cardCvx, {'attr': {'placeholder': 'CVV'} }) }}
                    </div>
                    </div>
                     <div class="row">
                        <p>{{ form_row(form.checkbox) }}J'accepte les Conditions générales applicables à ce partage de vélo,
                        les modalités pratiques de mangopay,
                        la politique de confidentialité de Bikerr et les conditions de l'assurance.</p>
                     </div>
                     <div class="row">
                        <button class="class bouton" type="submit" id="submit" name="submit" class="btn-secondary btn">Effectuer un paiement</button>{#{{  form_row(form.submit) }}#}
                     </div>

                    {% do form.submit.setRendered %}
                    {{ form_end(form) }}
                 <div class="row">
                    <img class="banniere" src="{{ asset('images/paiement/banniere_mangopay.png') }}" alt="banniere_mangopay" />
                 </div>
{% endblock %}